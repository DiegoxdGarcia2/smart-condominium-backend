{
  "info": {
    "_postman_id": "b6c9d8e0-0000-4c5a-9f9a-abcdef123456",
    "name": "SmartCondominium API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colecci√≥n Postman para SmartCondominium - incluye login (JWT) y algunas llamadas protegidas comunes."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login - Obtain JWT",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/token/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "token",
                ""
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Guarda access y refresh tokens en las variables de environment",
                  "if (pm.response.code === 200) {",
                  "    var json = pm.response.json();",
                  "    if (json.access) { pm.environment.set('access_token', json.access); }",
                  "    if (json.refresh) { pm.environment.set('refresh_token', json.refresh); }",
                  "    console.log('Access token almacenado en environment: access_token');",
                  "} else {",
                  "    console.warn('Login failed or returned non-200 status:', pm.response.code);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Administration",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/administration/users/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "administration",
                "users",
                ""
              ]
            }
          },
          "response": []
        },
        {
          "name": "Initiate Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"financial_fee_id\": {{financial_fee_id}}\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{base_url}}/api/administration/initiate-payment/",
              "host": ["{{base_url}}"],
              "path": ["api","administration","initiate-payment",
                ""
              ]
            }
          },
          "response": []
        },
        {
          "name": "Payment Webhook (test)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "{{stripe_signature}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{base_url}}/api/administration/payment-webhook/",
              "host": ["{{base_url}}"],
              "path": ["api","administration","payment-webhook",
                ""
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [],
  "variable": []
}
